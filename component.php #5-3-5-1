	/**
	 * Returns Google Fonts used in theme.
	 *
	 * @return array Associative array of $font_name
						=> $font_variants pairs.
	 */
	protected function get_google_fonts() : array {
		if ( is_array( $this->google_fonts ) ) {
			return $this->google_fonts;
		}

		$google_fonts = array(
			'Roboto Condensed' => array( '400', '400i',
										 '700', '700i' ),
			'Crimson Text'     => array( '400', '400i', 
										 '600', '600i' ),
		);
