/**
 * Adds support for the Custom Logo feature.
*/
public function action_add_custom_logo_support() {
	add_theme_support(
		'custom-logo',
		apply_filters(
			'wp_rig_custom_logo_args',
			array(
				'height'      => 250,
				'width'       => 250,
				'flex-width'  => false,
				'flex-height' => false,
				)
			)
		);
	}
